{
  "manifest_version": 3,
  "name": "Fashion Scraper",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "dist/background.js"
  },
   "content_scripts": [
    {
      "matches": ["https://www.victoriassecret.com/*"],
      "js": ["dist/content.js", "dist/hot-reload.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  }
}
